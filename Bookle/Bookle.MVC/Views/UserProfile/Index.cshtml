@model UserProfileVM






<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

<div class="bg-light">
    <button type="button" class="btn btn-primary">
        <a asp-controller="Home" asp-action="Index" class="cart-icon">
            <span> <h5 style="color:white">Back </h5></span>
        </a>
    </button>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="card profile-card shadow  mt-4">
            <div class="card-body text-center">
                <img src="~/account/anonimUser.png" width="60px" style="border-radius:60%" alt="img">

                <h3 class="card-title mb-0">@Model.FullName 's Profile</h3>
                <p class="text-muted">Web Developer</p>
                <p class="card-text">
                    Passionate web developer with 5 years of experience in creating responsive and
                    user-friendly websites.
                </p>

                <div class="d-flex justify-content-center mb-3">
                    <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="btn btn-outline-primary"><i class="bi bi-github"></i></a>
                </div>

                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item bg-transparent">
                        <i class="bi bi-briefcase-fill me-2"></i>@Model.FullName
                    </li>
                    <li class="list-group-item bg-transparent">
                        <i class="bi bi-envelope-fill me-2"></i>@Model.Email
                    </li>
                    <li class="list-group-item bg-transparent"><i class="bi bi-geo-alt-fill me-2"></i>@Model.Address</li>
                   
                </ul>

                <div class="d-flex justify-content-between text-center mt-4">
                    <div>
                        <h5 class="mb-0">1.5k</h5>
                        <small class="text-muted">Followers</small>
                    </div>
                    <div>
                        <h5 class="mb-0">120</h5>
                        <small class="text-muted">Projects</small>
                    </div>
                    <div>
                        <h5 class="mb-0">4.8</h5>
                        <small class="text-muted">Rating</small>
                    </div>
                </div>
                <div id="buttons" style="display:flex; margin-right: 10px">
                    <button type="button" class="btn btn-dark w-100 mt-6">
                    <a asp-controller="Wishlist" asp-action="Index" class="cart-icon">
                            <span> <h5 style="color:wheat">My Wishlist</h5></span>
                    </a>
                </button>
                    <button type="button" class="btn btn-dark w-100 mt-6">
                    <a asp-controller="ReadList" asp-action="Index" class="cart-icon">
                        <span> <h5 style="color:wheat">My ReadList</h5></span>
                    </a>
                </button>
                </div>
            </div>
        </div>
    </div>
</div>
<style>

    footer{
    
    display:none !important;
    }

    .header-1{
    display:none !important;
    }
</style>