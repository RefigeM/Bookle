@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<style>

	.header-1 {
		display: none !important;
	}

	.footer-section {
		display: none !important;
	}
</style>

<!doctype html>
<html class="fixed">
<head>

	<!-- Basic -->
	<meta charset="UTF-8">

	<meta name="keywords" content="HTML5 Admin Template" />
	<meta name="description" content="Porto Admin - Responsive HTML5 Template">
	<meta name="author" content="okler.net">

	<!-- Mobile Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

	<!-- Web Fonts  -->
	<link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css">


	<!-- Vendor CSS -->
	<link rel="stylesheet" href="~/accont/vendor/bootstrap/css/bootstrap.css" />
	<link rel="stylesheet" href="~/accont/vendor/animate/animate.compat.css">
	<link rel="stylesheet" href="~/accont/vendor/font-awesome/css/all.min.css" />
	<link rel="stylesheet" href="~/accont/vendor/boxicons/css/boxicons.min.css" />
	<link rel="stylesheet" href="~/accont/vendor/magnific-popup/magnific-popup.css" />
	<link rel="stylesheet" href="~/accont/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

	<!-- Theme CSS -->
	<link rel="stylesheet" href="~/account/assets/css/theme.css" />

	<!-- Skin CSS -->
	<link rel="stylesheet" href="~/account/assets/css/skins/default.css" />

	<!-- Theme Custom CSS -->
	<link rel="stylesheet" href="~/account/assets/css/custom.css">

	<!-- Head Libs -->
	<script src="~/account/assets/vendor/modernizr/modernizr.js"></script>

</head>
<body>
	<!-- start: page -->
	<section class="body-sign">
		<div class="center-sign">
			<a href="/" class="logo float-start">
				<img src="img/logo.png" height="70" alt="Porto Admin" />
			</a>

			<div class="panel card-sign">
				<div class="card-title-sign mt-3 text-end">
					<h2 class="title text-uppercase font-weight-bold m-0"><i class="bx bx-user-circle me-1 text-6 position-relative top-5"></i> Sign Up</h2>
				</div>
				<div class="card-body">
					<form method="post">
						<div style="margin-top: 30px;" class="form-group mb-3">
							<label>Username or Email</label>
							<div class="input-group">
								<input asp-for="UsernameOrEmail"  type="text" class="form-control form-control-lg" />
								<span class="input-group-text">
									<i class="bx bx-user text-4"></i>
								</span>
								<span asp-validation-for="UsernameOrEmail" class="text-danger"></span>

							</div>
							<label style="margin-top: 20px;">Password</label>

							<div class="input-group">
								<input asp-for="Password" class="form-control form-control-lg" />
								<span class="input-group-text">
									<i class="bx bx-lock text-4"></i>
								</span>
								<span asp-validation-for="Password" class="text-danger"></span>

							</div>
						</div>
												
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>

						<div class="row">
							<div class="col-sm-8">
							</div>
							<div class="col-sm-4 text-end">
								<button type="submit" class="btn btn-primary mt-2">Sign Up</button>
							</div>
						</div>
						<p class="text-center">Already have an account? <a action="Login" controller="Account">Sign In!</a></p>

					</form>
				</div>
			</div>
			<p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2023. All Rights Reserved.</p>
		</div>
	</section>
	<!-- end: page -->
	<!-- Vendor -->
	<script src="~/account/assets/vendor/jquery/jquery.js"></script>
	<script src="~/account/assets/jquery-browser-mobile/jquery.browser.mobile.js"></script>
	<script src="~/account/assets/popper/umd/popper.min.js"></script>
	<script src="~/account/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/account/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
	<script src="~/account/assets/common/common.js"></script>
	<script src="~/account/assets/nanoscroller/nanoscroller.js"></script>
	<script src="~/account/assets/magnific-popup/jquery.magnific-popup.js"></script>
	<script src="~/account/assets/jquery-placeholder/jquery.placeholder.js"></script>

	<!-- Specific Page Vendor -->
	<!-- Theme Base, Components and Settings -->
	<script src="~/account/assets/js/theme.js"></script>

	<!-- Theme Custom -->
	<script src="~/account/assets/js/custom.js"></script>

	<!-- Theme Initialization Files -->
	<script src="~/account/assets/js/theme.init.js"></script>

</body>
</html>
