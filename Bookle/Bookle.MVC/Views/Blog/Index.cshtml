   @model List<Blog>
 
<!-- Breadcumb Section Start -->
<div class="breadcrumb-wrapper">
    <div class="book1">
        <img src="~/projImages/5.png" alt="book">
    </div>
    <div class="book2">
        <img src="~/projImages/6.png" alt="book">
    </div>
    <div class="container">
        <div class="page-heading">
            <h1>Blog Grid</h1>
            <div class="page-header">
                <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".3s">
                    <li>
                        <a asp-action="Index" asp-controller="Home">
                            Home
                        </a>
                    </li>
                    <li>
                        <i class="fa-solid fa-chevron-right"></i>
                    </li>
                    <li>
                        Blog Grid
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- News Section Start -->
<section class="news-section fix section-padding">
    <div class="container">
        <div class="row g-4">
           @foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay=".2s">
                    <div class="news-card-items style-2 mt-0">
                        <div class="news-image">
                            <img src="@Url.Content(item.ImageUrl)" style="width:400px; height:300px" />
                            <img src="@Url.Content(item.ImageUrl)" style="width:400px; height:300px" />
                           
                        </div>
                        <div class="news-content">
                            <ul>
                                <li>
                                    <i class="fa-light fa-calendar-days"></i>
                                   @item.CreatedDate
                                </li>
                                <li>
                                    <i class="fa-regular fa-user"></i>
                                    By Admin
                                </li>
                            </ul>
                            <h3>
                                <a asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id" class="main__title-link">@item.Title <i class="fa-regular fa-arrow-right-long"></i></a>
                            </h3>
                            <a asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id" class="main__title-link"> Read More <i class="fa-regular fa-arrow-right-long"></i></a>

                          
                        </div>
                    </div>
                </div>

            }         
        </div>
       
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" asp-route-take="@ViewBag.Take" asp-route-page="@((ViewBag.AktivePage > 1 ? ViewBag.AktivePage - 1 : 1))">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.PageCount; i++)
            {
                <li class="page-item @(i == ViewBag.AktivePage ? "active" : "")">
                    <a class="page-link" asp-route-take="@ViewBag.Take" asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item">
                <a class="page-link" asp-route-take="@ViewBag.Take" asp-route-page="@((ViewBag.AktivePage < ViewBag.PageCount ? ViewBag.AktivePage + 1 : ViewBag.PageCount))">Next</a>
            </li>
        </ul>
    </nav>
</section>
