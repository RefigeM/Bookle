@model CommentUpdateVM
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<!-- main content -->
<main class="main">
    <div class="container-fluid">
        <div class="row">
            <!-- main title -->
            <div class="col-12">
                <div class="main__title">
                    <li class="sidebar__nav-item">
                        <a asp-action="Index" asp-controller="Comment" class="sidebar__nav-link "><i class="ti ti-arrow-left"></i> <span>Go Back</span></a>
                    </li>
                </div>
            </div>
            <!-- end main title -->
            <!-- form -->
            <form enctype="multipart/form-data" method="post">

                <div class="form-group">
                    <input asp-for="Content" type="text" class="sign__input" placeholder="Content">
                    <span asp-for="Content" class="text-danger" asp-validation-for="Content"></span>
                </div>
                @if (ViewBag.Books != null && ViewBag.Authors != null)
                {
                    <div class="form-group" style="margin-top:25px";>
                        <select class="sign__input" asp-for="BookId" asp-items="ViewBag.Books">
                            <option disabled selected>Select Book</option>
                        </select>
                    </div>
                    <div class="form-group" style="margin-top:25px";>
                        <select class="sign__input" asp-for="UserId" asp-items="ViewBag.Authors">
                            <option disabled selected>Select Author</option>
                        </select>
                    </div>                   
                }
               

              
              
                <div class="col-12">
                    <button type="submit" class="btn btn-primary" style="margin-top: 20px">Submit</button>
                </div>
            </form>

            <!-- end form -->
        </div>
    </div>
</main>
<!-- end main content -->
