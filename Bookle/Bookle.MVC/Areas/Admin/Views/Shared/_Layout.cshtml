		<!-- sidebar logo -->
		
		<!-- end sidebar logo -->
		<!-- sidebar user -->
		<div class="sidebar__user">
			<div class="sidebar__user-img">
				<img src="~/admin/assets/img/user.svg" alt="">
			</div>

			<div class="sidebar__user-title">
				<span>Admin</span>
			</div>

			
